<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/main_layout"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		>

    <TextView
	android:id="@+id/sdk_version_label"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:layout_width="fill_parent"
	android:layout_height="20dp"
	android:textColor="#FFF"
	android:background="@drawable/text_bg"
	android:typeface="normal"
	android:textStyle="normal"
	android:textSize="15sp"
	android:gravity="left"
	android:singleLine="true"
	android:text="@string/sdk_version_label"
	/>

    <TextView
	android:id="@+id/text_status"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:layout_width="fill_parent"
	android:layout_height="30dp"
	android:textColor="#00FFFF"
	android:background="@drawable/text_bg"
	android:typeface="monospace"
	android:textStyle="bold"
	android:textSize="18sp"
	android:gravity="center"
	android:singleLine="true"
	android:text="@string/init_label"
	/>

    <EditText
	android:id="@+id/edit_url"
	android:text="@string/default_room"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:layout_width="fill_parent"
	android:layout_height="30dp"
	android:cursorVisible="true"
	android:inputType="textUri"
	android:textColor="#FFFFFF"
	android:background="@drawable/text_bg"
	android:typeface="monospace"
	android:textSize="18sp"
	android:gravity="center"
	android:singleLine="true"
	/>

    <TextView
	android:id="@+id/text_stats"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:layout_width="fill_parent"
	android:layout_height="60dp"
	android:textColor="#FFFFFF"
	android:typeface="monospace"
	android:textSize="13sp"
	android:gravity="center"
	android:text="@string/up_stats_label"
	/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		  android:id="@+id/spinner_layout1"
		  android:orientation="horizontal"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_marginLeft="5dip"
		  android:layout_marginRight="5dip"
		  android:layout_marginTop="5dip"
		  android:layout_marginBottom="5dip"
		  >

      <TextView
	  android:id="@+id/prompt_ec"
	  android:text="@string/ec_prompt"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:typeface="monospace"
	  android:textColor="#FFFFFF"
	  android:textStyle="bold"
	  android:layout_weight="2"
	  android:gravity="right|center_vertical"
	  />

      <Spinner
	  android:id="@+id/spinner_ec"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:entries="@array/ec_arrays"
	  android:typeface="monospace"
	  android:textColor="#FFFFFF"
	  android:layout_weight="1"
	  android:gravity="center"
	  />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		  android:id="@+id/spinner_layout2"
		  android:orientation="horizontal"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_marginLeft="5dip"
		  android:layout_marginRight="5dip"
		  android:layout_marginTop="5dip"
		  android:layout_marginBottom="5dip"
		  >

      <TextView
	  android:id="@+id/prompt_ns"
	  android:text="@string/ns_prompt"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:typeface="monospace"
	  android:textColor="#FFFFFF"
	  android:textStyle="bold"
	  android:layout_weight="2"
	  android:gravity="right|center_vertical"
	  />

      <Spinner
	  android:id="@+id/spinner_ns"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:entries="@array/ns_arrays"
	  android:typeface="monospace"
	  android:textColor="#FFFFFF"
	  android:layout_weight="1"
	  android:gravity="center"
	  />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		  android:id="@+id/spinner_layout3"
		  android:orientation="horizontal"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_marginLeft="5dip"
		  android:layout_marginRight="5dip"
		  android:layout_marginTop="5dip"
		  android:layout_marginBottom="5dip"
		  >

      <TextView
	  android:id="@+id/prompt_camera"
	  android:text="@string/camera_prompt"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:typeface="monospace"
	  android:textColor="#FFFFFF"
	  android:textStyle="bold"
	  android:layout_weight="2"
	  android:gravity="right|center_vertical"
	  />

      <Spinner
	  android:id="@+id/spinner_camera"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:typeface="monospace"
	  android:textColor="#FFFFFF"
	  android:layout_weight="1"
	  android:gravity="center"
	  />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		  android:id="@+id/control_layout"
		  android:orientation="horizontal"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_marginLeft="5dip"
		  android:layout_marginRight="5dip"
		  android:layout_marginTop="5dip"
		  android:layout_marginBottom="5dip"
		  >

      <Button
	  android:id="@+id/button_connect"
	  android:text="@string/connect_btn_label"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_marginLeft="0dip"
	  android:layout_marginRight="5dip"
	  android:layout_weight="1"
	  android:textColor="#FFFFFF"
	  android:background="@drawable/button_bg_blue"
	  android:typeface="monospace"
	  android:textStyle="bold"
	  android:gravity="center"
	  android:enabled="false"
	  />

      <Button
	  android:id="@+id/button_disconnect"
	  android:text="@string/disconnect_btn_label"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_marginLeft="0dip"
	  android:layout_marginRight="5dip"
	  android:layout_weight="1"
	  android:textColor="#FFFFFF"
	  android:background="@drawable/button_bg_blue"
	  android:typeface="monospace"
	  android:textStyle="bold"
	  android:gravity="center"
	  android:visibility="gone"
	  android:enabled="false"
	  />

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/publish_layout"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:layout_weight="2"
		    >

	<ToggleButton
	    android:id="@+id/toggle_video"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:checked="true"
	    android:textOff="Video Off"
	    android:textOn="Video On"
	    android:typeface="monospace"
	    android:textStyle="bold"
	    android:enabled="false"
	    />

	<ToggleButton
	    android:id="@+id/toggle_audio"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:checked="true"
	    android:textOff="Audio Off"
	    android:textOn="Audio On"
	    android:typeface="monospace"
	    android:textStyle="bold"
	    android:enabled="false"
	    />

      </LinearLayout>

      <Button
	  android:id="@+id/button_logs"
	  android:text="@string/logs_btn_label"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_marginLeft="5dip"
	  android:layout_marginRight="0dip"
	  android:layout_weight="2"
	  android:textColor="#FFFFFF"
	  android:background="@drawable/button_bg_red"
	  android:typeface="monospace"
	  android:textStyle="bold"
	  android:gravity="center"
	  android:enabled="true"
	  />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/video_layout"
		    android:clickable="true"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dip"
		    android:layout_marginRight="5dip"
		    android:layout_marginTop="5dip"
		    android:layout_marginBottom="5dip"
		    >

      <com.addlive.view.VideoView android:id="@+id/remote_video"
				  android:layout_width="fill_parent"
				  android:layout_height="500dip"
				  />

      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"		      
		      android:padding="5dip"
		      android:layout_alignParentBottom="true"
		      >

	<SurfaceView android:id="@+id/local_video"
		     android:layout_width="120dip"
		     android:layout_height="160dip"
		     />

      </RelativeLayout>

    </RelativeLayout>

  </LinearLayout>

</ScrollView>
